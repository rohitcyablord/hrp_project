<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android = "http://schemas.android.com/apk/res/android"
    xmlns:tools = "http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height = "match_parent"
    tools:context = ".Register">


    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_margin="@dimen/standard_margin_size">

        <ProgressBar
            android:id="@+id/loadingBar"
            style="?android:attr/progressBarStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:visibility="invisible"/>


        <TextView
            android:id="@+id/per_Details"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:text="Personal Details"
            android:textAlignment="center"
            android:textColor="@color/log"
            android:textSize="@dimen/standard_heading_size"
            android:padding="@dimen/standard_padding_size" />

        <Spinner
            android:id="@+id/sponsor_name"
            android:tooltipText="Select user name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/standard_padding_size"/>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/back_color">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/user_name"
                android:hint="User Name"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:textColor="@color/text"
                android:padding="@dimen/standard_input_padding"
                android:textSize="@dimen/standard_text_size"/>

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/back_color">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/contact_no"
                android:hint="Mobile Number"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:textColor="@color/text"
                android:padding="@dimen/standard_input_padding"
                android:textSize="@dimen/standard_text_size"/>

        </android.support.design.widget.TextInputLayout>

        <TextView
            android:id="@+id/bank_Details"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:text="Bank Details"
            android:textAlignment="center"
            android:textColor="@color/log"
            android:textSize="@dimen/standard_heading_size"
            android:padding="@dimen/standard_padding_size" />

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/back_color">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/info1"
                android:hint="@string/activity_register_info1"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:textColor="@color/text"
                android:padding="@dimen/standard_input_padding"
                android:textSize="@dimen/standard_text_size"/>

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/back_color">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/info2"
                android:hint="@string/activity_register_info2"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:textColor="@color/text"
                android:padding="@dimen/standard_input_padding"
                android:textSize="@dimen/standard_text_size"/>

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/back_color">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/info3"
                android:hint="@string/activity_register_info3"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:textColor="@color/text"
                android:padding="@dimen/standard_input_padding"
                android:textSize="@dimen/standard_text_size"/>

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/back_color">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/info4"
                android:hint="@string/activity_register_info4"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:textColor="@color/text"
                android:padding="@dimen/standard_input_padding"
                android:textSize="@dimen/standard_text_size"/>

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/back_color">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/info5"
                android:hint="@string/activity_register_info5"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:textColor="@color/text"
                android:padding="@dimen/standard_input_padding"
                android:textSize="@dimen/standard_text_size"/>

        </android.support.design.widget.TextInputLayout>

    </LinearLayout>

    <Button
        android:id="@+id/register_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Register"
        android:background="@color/log"
        android:textColor="@color/white"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:textSize="@dimen/standard_text_size" />

</RelativeLayout>