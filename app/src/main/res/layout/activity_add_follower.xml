<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android = "http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools = "http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height = "match_parent"
    tools:context=".AddFollowerActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="0.05"
            android:padding="@dimen/standard_input_padding"
            android:background="@color/back_color">

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <android.support.design.widget.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/inp_text1"
                    android:hint="@string/add_follower_input1"
                    android:textColor="@color/log"
                    android:background="@drawable/logbtn"
                    android:padding="@dimen/standard_input_padding"
                    android:textSize="@dimen/standard_text_size" />

            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <android.support.design.widget.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/inp_text2"
                    android:hint="@string/add_follower_input2"
                    android:textColor="@color/log"
                    android:background="@drawable/logbtn"
                    android:padding="@dimen/standard_input_padding"
                    android:textSize="@dimen/standard_text_size" />

            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <android.support.design.widget.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/inp_text3"
                    android:hint="@string/add_follower_input3"
                    android:textColor="@color/log"
                    android:background="@drawable/logbtn"
                    android:padding="@dimen/standard_input_padding"
                    android:textSize="@dimen/standard_text_size" />

            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <android.support.design.widget.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/inp_text4"
                    android:hint="@string/add_follower_input4"
                    android:textColor="@color/log"
                    android:background="@drawable/logbtn"
                    android:padding="@dimen/standard_input_padding"
                    android:textSize="@dimen/standard_text_size" />

            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <android.support.design.widget.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/inp_text5"
                    android:hint="@string/add_follower_input5"
                    android:textColor="@color/back_color"
                    android:background="@drawable/logbtn"
                    android:padding="@dimen/standard_input_padding"
                    android:textSize="@dimen/standard_text_size" />

            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <android.support.design.widget.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/inp_text6"
                    android:hint="@string/pass_text1"
                    android:textColor="@color/log"
                    android:background="@drawable/logbtn"
                    android:padding="@dimen/standard_input_padding"
                    android:textSize="@dimen/standard_text_size" />

            </android.support.design.widget.TextInputLayout>

        </LinearLayout>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/add_btn"
            android:id="@+id/button"
            android:background="@color/log"
            android:textColor="@color/white"
            android:textSize="@dimen/standard_text_size"
            android:layout_weight="0"/>

    </LinearLayout>

</RelativeLayout>
